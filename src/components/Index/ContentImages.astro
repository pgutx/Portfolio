---
import { Tailwindcss } from 'simple-icons-astro';
import { Astro as AstroIcon } from 'simple-icons-astro';
import { Swiper } from 'simple-icons-astro';
---

<section transition:name="images"
class = "
col-span-8 col-start-1 row-start-7 py-6 mx-6
lg:col-span-4 lg:col-start-3 lg:row-start-6 lg:py-0 lg:mx-0
border rounded-lg shadow-sm">
<div class="h-full flex flex-col items-center place-content-center justify-around space-y-4 lg:-space-y-2">
<h2 class="text-xl uppercase -mt-4 lg:-mt-1 lg:pb-0">Built with</h2>
<ul class="flex flex-row space-x-3 lg:space-x-4 lg:-mt-12">
    <li class="transition hover:-translate-y-2">
        <a href="https://astro.build/" target="_blank">
            <AstroIcon alt="Astro" class="h-10 w-10 lg:h-14 lg:w-14 hover:text-orange-500"/>
        </a>
    </li>
    <li class="transition hover:-translate-y-2">
        <a href="https://tailwindcss.com/" target="_blank">
            <Tailwindcss alt="Tailwind" class="h-10 w-10 lg:h-14 lg:w-14 hover:text-sky-500"/>
        </a>
    </li>
    <li class="transition hover:-translate-y-2">
        <a href="https://swiperjs.com/" target="_blank">
            <Swiper alt="Swiper" class="h-10 w-10 lg:h-14 lg:w-14 hover:text-blue-500"/>
        </a>
    </li>
</ul>
</div>
</section>
