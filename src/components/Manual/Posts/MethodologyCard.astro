<div id="methodologyCard" transition:name="thirdpost" class="
col-span-8 row-start-6 row-span-2 mx-6
lg:col-span-4 lg:row-span-4 lg:col-start-2 lg:row-start-4 lg:mt-[44px] lg:-mr-32 lg:ml-[72px] lg:max-h-[382px]
border rounded-lg shadow-sm">
<slot />
</div>

<script>
    import Bowser from "bowser";

    document.addEventListener('astro:page-load', () => {

    const browser = Bowser.getParser(window.navigator.userAgent);

    const firefox = "Firefox";

    const methodologyCard = document.querySelector('#methodologyCard');

    if(methodologyCard && `${browser.getBrowserName()}`=== firefox){
        methodologyCard.classList.replace('lg:mt-[44px]', 'lg:mt-[180px]');
        methodologyCard.classList.add('lg:mb-[144px]');
    }
    });
</script>