<div id="practicesCard" transition:name="secondpost" class="
col-span-8 row-start-4 row-span-2 mx-6
lg:col-span-4 lg:row-span-4 lg:col-start-4 lg:row-start-2 lg:mb-72 lg:mt-[27px] lg:mr-[72px] lg:-ml-32 lg:max-h-[382px] 
border rounded-lg shadow-sm">
<slot />
</div>

<script>
    import Bowser from "bowser";

    document.addEventListener('astro:page-load', () => {

    const browser = Bowser.getParser(window.navigator.userAgent);

    const firefox = "Firefox";

    const practicesCard = document.querySelector('#practicesCard');

    if(practicesCard && `${browser.getBrowserName()}`=== firefox){
        practicesCard.classList.replace('lg:mt-[27px]', 'lg:mt-[45px]');
        practicesCard.classList.replace('lg:mb-72', 'lg:mb-[330px]');
    }
    });
</script>