---
import '@fontsource/titillium-web/400.css';
import '@fontsource/titillium-web/600.css';
import '@fontsource/titillium-web/700.css';
import Wrapper from '../components/Shared/Wrapper.astro';
import Header from '../components/Shared/Header.astro';
import Footer from '../components/Shared/Footer.astro';
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="author" content="Piotr Gutowski"/>
		<meta name="description" content="My portfolio site, showcasing manual and automation testing projects I've done."/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<title>{title}</title>
	</head>
	<body class="font-sans min-h-screen grid dark:text-slate-200">
		<Wrapper>
		<Header></Header>
            <slot />
		<Footer></Footer>
		</Wrapper>
	</body>
</html>


